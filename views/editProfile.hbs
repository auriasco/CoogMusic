    <div class="container mt-4"> 
    {{#if error}}
        <h4 class="alert alert-danger mt-4">{{error}}</h4>
    {{/if}}

    {{#if success}}
        <h4 class="alert alert-success mt-4">{{success}}</h4>
    {{/if}}


        <form action="/auth/updateUserProfile" method="POST">

        <div class="form-group" style="padding-top: 25px;">
            <label for="name">Name </label>
            <input type="text" class="form-control" id="name" name="name" placeholder="{{acc.user_name_display}}">
        </div>
    
        <div class="form-group" style="padding-top: 25px;">
            <label for="email">Email address</label>
            <input type="email" class="form-control" id="email" aria-describedby="emailHelp" name="email" placeholder="{{acc.user_email}}" >
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>

        <div class="form-group" style="padding-top: 25px;">
            <label for="DOB" class="col-2 col-form-label">Date of birth</label>
            <input class="form-control" type="date" value="DOB" id="DOB" name="DOB">
        </div>

        <div class="form-group" style="padding-top: 25px;">
            <label for="country">Country</label>
            <select class="form-control" id="country" name="country" placeholder={{acc.country}}>
            <option value={{acc.country}}>(Current) {{acc.country}}</option>
            <option>Canada</option>
            <option>Greenland</option>
            <option>Mexico</option>
            <option>USA</option>
            </select>
        </div>

        <div class="form-group"style="padding-top: 25px;" >
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" placeholder="Password" name="password">
        </div>

        <div class="form-group"style="padding-top: 25px; padding-bottom: 25px" >
            <label for="password2">Confirm Password</label>
            <input type="password" class="form-control" id="password2" placeholder="Password" name="password2">
        </div>

        <input style="display:none;" type="text" name="userId" value={{acc.user_id}}>
        <button type="submit" class="btn btn-primary">update</button>
    </form>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>    
    
</body>
</html>